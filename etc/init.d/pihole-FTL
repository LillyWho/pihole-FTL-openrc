#!/usr/bin/openrc-run
command="/usr/bin/pihole-FTL"
pidfile="/run/pihole-FTL/pihole-FTL.pid"

depend() {
	use dns logger
}

start() {
	/usr/bin/pihole-FTL
}

stop() {
	killall -s6 pihole-FTL
	rm /run/pihole-FTL/pihole-FTL.pid
}

restart() {
	killall -s6 pihole-FTL
        rm /run/pihole-FTL/pihole-FTL.pid
	/usr/bin/pihole-FTL 
}
