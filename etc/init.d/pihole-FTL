start() {
	ebegin "Starting pihole-FTL"
	start-stop-daemon --start \
	--user pihole \
        --exec /usr/bin/pihole-FTL \
        --pidfile /run/pihole-FTL/pihole-FTL.pid \
}

stop() {
	ebegin "Stopping pihole-FTL"
	start-stop-daemon --stop \
	--exec /usr/bin/pihole-FTL
}

restart() {
	ebegin "Stopping pihole-FTL"
	start-stop-daemon --stop \
	--exec /usr/bin/pihole-FTL
	ebegin "Starting pihole-FTL"
	start-stop-daemon --start \
	--user pihole \
        --exec /usr/bin/pihole-FTL \
        --pidfile /run/pihole-FTL/pihole-FTL.pid
	
